{
  "defaults": {
    "platform": "desktop",
    "headless": false,
    "slow_mo": 0,

    "viewport": {
      "width": 1920,
      "height": 1080
    },

    "artifacts": {
      "video": "on",
      "screenshot": "only-on-failure",
      "trace": "on"
    }
  },

  "browsers": {
    "chromium": {
      "engine": "chromium",
      "headless": true
    },
    "firefox": {
      "engine": "firefox",
      "headless": true
    },
    "webkit": {
      "engine": "webkit",
      "headless": true
    },
    "edge": {
      "engine": "chromium",
      "headless": true
    }
  },

  "mobile": {
    "enabled": false,
    "device": "Pixel 7"
  },

  "android": {
    "enabled": false,
    "device_serial": "",
    "package": "com.android.chrome"
  }
}
